<script>
    var db = [];
    // ğŸ” æ ¸å¿ƒä¿®å¾©ï¼šæ””æˆªå„²å­˜ç©ºé–“éŒ¯èª¤
    try {
        db = JSON.parse(localStorage.getItem('vault_v_final')) || [];
    } catch (e) {
        alert("å„²å­˜ç©ºé–“å—é™ï¼è«‹å‹™å¿…å°‡æ­¤ç¶²é ã€åŠ å…¥ä¸»ç•«é¢ã€å¾Œå†ä½¿ç”¨ã€‚");
    }

    function render() {
        var g = 0;
        [0,1,2].forEach(function(t) {
            var html = '';
            var sub = 0;
            db.filter(function(i){ return i.t === t }).forEach(function(item) {
                var v = item.t === 2 ? (item.p * item.q) : item.p;
                if(item.u) v *= 32.5;
                sub += v;
                html += '<div class="row"><span>'+item.n+'</span><span>$'+Math.round(v).toLocaleString()+'</span></div>';
            });
            g += sub;
            var listDiv = document.getElementById('list-'+t);
            if(listDiv) listDiv.innerHTML = html;
        });
        document.getElementById('total').innerText = '$' + Math.round(g).toLocaleString();
        try {
            localStorage.setItem('vault_v_final', JSON.stringify(db));
        } catch (e) {}
    }

    function openP(t) {
        window.curT = t;
        document.getElementById('s-fields').style.display = (t === 2 ? 'block' : 'none');
        document.getElementById('n').value = '';
        document.getElementById('p').value = '';
        document.getElementById('q').value = '';
        document.getElementById('c').value = '';
        document.getElementById('u').checked = false;
        document.getElementById('pop').style.display = 'flex';
    }

    function closeP() { document.getElementById('pop').style.display = 'none'; }

    function saveP() {
        var n = document.getElementById('n').value;
        if(!n) return;
        db.push({
            t: window.curT, 
            n: n, 
            p: parseFloat(document.getElementById('p').value) || 0,
            q: parseFloat(document.getElementById('q').value) || 0,
            c: parseFloat(document.getElementById('c').value) || 0,
            u: document.getElementById('u').checked
        });
        render(); closeP();
    }

    // ç¢ºä¿é é¢æ¸²æŸ“
    render();
</script>
